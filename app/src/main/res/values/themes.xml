<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        OLED Dark Theme - "Hacker" Aesthetic
        Forces dark mode only with pure black backgrounds
    -->
    <style name="Theme.SmsGateway" parent="Theme.MaterialComponents.NoActionBar">
        <!-- OLED Black Background -->
        <item name="android:colorBackground">@color/oled_black</item>
        <item name="colorSurface">@color/oled_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Terminal Green Primary -->
        <item name="colorPrimary">@color/terminal_green</item>
        <item name="colorPrimaryVariant">@color/terminal_green_dark</item>
        <item name="colorOnPrimary">@color/oled_black</item>

        <!-- Cyan Secondary -->
        <item name="colorSecondary">@color/terminal_cyan</item>
        <item name="colorSecondaryVariant">@color/terminal_cyan_dim</item>
        <item name="colorOnSecondary">@color/oled_black</item>

        <!-- Status bar - pure black -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/oled_black</item>
        <item name="android:navigationBarColor">@color/oled_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/oled_black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Default text appearance with monospace -->
        <item name="android:textAppearance">@style/TextAppearance.Terminal</item>
    </style>

    <!-- Card style with dark surface -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/oled_surface</item>
        <item name="strokeColor">@color/terminal_green_dark</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Terminal-style text appearance -->
    <style name="TextAppearance.Terminal" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Terminal.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/terminal_green</item>
    </style>

    <style name="TextAppearance.Terminal.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Home card styles with monospace -->
    <style name="HomeCardLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">4dp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAppearance">@style/TextAppearance.Terminal.Body</item>
    </style>

    <style name="HomeCardValue" parent="Widget.AppCompat.TextView">
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">4dp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/terminal_green</item>
    </style>

    <!-- Button styling -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/terminal_green_dark</item>
        <item name="android:textColor">@color/terminal_green</item>
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Switch styling -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/terminal_green</item>
        <item name="trackTint">@color/terminal_green_dark</item>
    </style>

    <!-- Preference styling -->
    <style name="Preference.Terminal" parent="Preference">
        <item name="android:layout">@layout/preference_terminal</item>
    </style>

    <style name="PreferenceCategory.Terminal" parent="Preference.Category">
        <item name="android:textColor">@color/terminal_green</item>
    </style>

    <!-- Toggle Button styling -->
    <style name="Widget.App.ToggleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/oled_surface</item>
        <item name="android:textColor">@color/terminal_green</item>
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
